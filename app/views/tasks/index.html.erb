<h2>List of Tasks</h2>

<%= link_to 'New Task', new_task_path %>
<br>

<table>
  <tr>
    <th>Date</th><br>
    <th>Item</th>
    <th>Status</th>
  </tr>
  
  
  <% @tasks.each do |task| %>
    <tr>
        <td><%= task.date %></td>
        
        <td><%= task.item %></td>
        
        <td><%= task.status %></td>
        
        <td><%= link_to 'Delete', task_path(task),
          method: :delete,
          data: { confirm: 'Are you sure?' } %>
        </td>
    </tr>
  <% end %>
</table>